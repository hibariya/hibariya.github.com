#!/usr/bin/env ruby
# coding: utf-8

url         'http://hibariya.github.com/'
title       'Joy Luck Crab'
description 'hibariya.github.com'
author      'hibariya'
renderer    Renderers::PygmentsRenderer

disqus_shortname 'joyluckcrab'

after :edit do
  preview ARGV.pop if yes?("Preview now? [yes/no]")
end

after :rebind, :commit

after :commit do
  if yes?("Deploy now? [yes/no]")
    system "cd #{config.retter_home} && git push origin master"
  end
end

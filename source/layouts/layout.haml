!!! 5
%html
  %head
    %title= "#{current_page.data.title || settings.title} - #{settings.site_name}"
    %meta(charset='utf-8')
    %meta(name='author'){content: settings.author}
    %link(rel='icon' type='image/png' href='/favicon.png')
    %link(rel='alternate' title='RSS' type='application/rss+xml' href='/articles.rss')
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body{class: page_classes}
    %header
      %h1
        = link_to settings.site_name, '/'
      %nav
        %ul#menu
          %li= link_to 'Home',     '/'
          %li= link_to 'Articles', '/articles.html'

    %main= content_for?(:content) ? yield_content(:content) : yield

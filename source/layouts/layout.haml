!!! 5
%html
  %head
    %title= "#{current_page.data.title || settings.title} - #{settings.site_name}"
    %meta(charset='utf-8')
    %meta(name='author'){content: settings.author}
    %link(rel='icon' type='image/png' href='/favicon.png')
    %link(rel='alternate' title='Atom' type='application/atom+xml' href='/articles.xml')

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

    - if content_for?(:head)
      = yield_content(:head)

  %body{class: page_classes}
    %header
      %h1
        = link_to settings.site_name, '/'
      %nav
        %ul#menu
          %li= link_to 'Home',     '/'
          %li= link_to 'Articles', '/articles.html'
          %li= link_to 'Github', 'https://github.com/hibariya', target: '_blank'
          %li= link_to 'Twitter', 'https://twitter.com/hibariya', target: '_blank'
          %li= link_to 'hibariya.org', 'http://hibariya.org', target: '_blank'

    %main= content_for?(:content) ? yield_content(:content) : yield

